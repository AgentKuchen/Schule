<Window x:Class="PacMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGame"
        mc:Ignorable="d"
        Title="HTL PacMan" Height="720" Width="850"
        KeyDown="Window_KeyDown">
    <StackPanel Orientation="Vertical" x:Name="MyOuterStackPanel" Margin="10, 10, 10, 10">
        <StackPanel Height="560" Width="800" x:Name="MyStackPanel">
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="700">
            <Label x:Name="bottomLabel" FontSize="18pt">Points: 0</Label>
        </StackPanel>
        <StackPanel Width="700">
            <Button Click="Button_start_Click" Margin="0, 0, 0, 0" Padding="30, 10, 30, 10" FontSize="12pt">Start</Button>
        </StackPanel>
    </StackPanel>
</Window>
